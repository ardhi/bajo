{
  "plugins": ["plugins/markdown"],
  "opts": {
    "encoding": "utf8",
    "readme": "./README.md",
    "recurse": true,
    "verbose": true,
    "destination": "./docs/api",
    "template": "node_modules/docdash"
  },
  "source": {
    "include": ["./boot"],
    "includePattern": ".+\\.js(doc|x)?$",
    "exclude": ["node_modules", "doc", "lib", "package-lock.json"]
  },
  "markdown": {
    "hardwrap": false,
    "idInHeadings": true
  },
  "sourceType": "module",
  "templates": {
    "cleverLinks": false,
    "monospaceLinks": false
  },
  "docdash": {
    "meta": {
      "title": "Bajo Framework",
      "description": "",
      "keyword": ""
    },
    "search": true,
    "collapse": "top",
    "sort": true,
    "menu": {
      "Project Website": {
        "href": "https://bajo.app",
        "target": "_blank",
        "class": "menu-item"
      },
      "Github": {
        "href": "https://github.com/ardhi/bajo",
        "target": "_blank",
        "class": "menu-item"
      }
    }
  }
}