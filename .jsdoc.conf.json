{
  "plugins": ["plugins/markdown"],
  "opts": {
    "encoding": "utf8",
    "recurse": true,
    "verbose": true,
    "destination": "./docs",
    "template": "node_modules/clean-jsdoc-theme",
    "tutorials": "./tutorial",
    "readme": "./docs/home.md",
    "theme_opts": {
      "default_theme": "light",
      "display-module-header": true,
      "title": "Bajo Framework",
      "homepageTitle": "Bajo Framework",
      "sections": ["Tutorials", "Classes", "Events", "Modules", "Global"],
      "menu": [{
        "title": "Bajo.app",
        "link": "https://bajo.app"
      }, {
        "title": "NPM",
        "link": "https://www.npmjs.com/package/bajo"
      }, {
        "title": "Github",
        "link": "https://github.com/ardhi/bajo"
      }]
    }
  },
  "source": {
    "include": ["."],
    "includePattern": ".+\\.js(doc|x)?$",
    "exclude": ["node_modules", "docs", "test", "api-docs"]
  },
  "markdown": {
    "hardwrap": false,
    "idInHeadings": true
  },
  "sourceType": "module",
  "templates": {
    "cleverLinks": false,
    "monospaceLinks": false
  }
}